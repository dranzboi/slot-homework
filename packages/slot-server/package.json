{
  "name": "slot-server",
  "version": "1.0.0",
  "scripts": {
    "build": "nest build",
    "start": "nest build && node ./dist/main/main.js",
    "serve": "nest start --watch",
    "migrations": "typeorm-ts-node-commonjs migration:run -d ./src/main/ormCliConfig.ts",
    "migrations:generate": "typeorm-ts-node-commonjs migration:generate ./src/migrations/init -d ./src/main/ormCliConfig.t"
  },
  "dependencies": {
    "@nestjs/core": "11.1.6",
    "@nestjs/common": "11.1.6",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/typeorm": "11.0.0",
    "typeorm": "0.3.26",
    "pg": "8.16.3",
    "dotenv": "17.2.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "uuid": "11.1.0",
    "class-validator": "0.14.2",
    "class-transformer": "0.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@types/node": "24.3.1",
    "@types/uuid": "10.0.0",
    "@types/dotenv": "8.2.3",
    "typescript": "5.9.2",
    "ts-node": "10.9.2"
  }
}
